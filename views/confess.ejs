<%- include('partials/header') %>

<div class="container mt-5">

<h1>Say something nice to <%= toUser %></h1>

<div class="row">
  <div class="col-sm-8">
    <div class="card">
      <div class="card-body">
       
        <form action="/confess" method="POST">
          <textarea name="confession" id="confession" rows="10"></textarea>
          <button type="submit" class="mt-3 btn">Send</button>
          <input type="hidden" name="toUser" value="<%= toUser %>" />
        </form>
      </div>
    </div>
  
</div>

</div>

<%- include('partials/footer') %>
