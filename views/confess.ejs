<div class="container mt-5">
  <h1>Say something nice to <%= toUser %></h1>

  <div class="card-body">
    <form action="/confess" method="POST">
      <div class="form-group">
        <label for="exampleFormControlTextarea1"></label>
        <textarea name="confession" id="confession" class="form-control" id="exampleFormControlTextarea1" rows="5"></textarea>
